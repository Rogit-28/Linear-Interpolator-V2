{
  "build": {
    "beforeBuildCommand": "cd frontend/scaling && npm run build",
    "beforeDevCommand": "cd frontend/scaling && npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "./frontend/scaling/out"
  },
  "package": {
    "productName": "Scaling Range",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.scaling.range",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Scaling Range",
        "width": 600,
        "height": 250,
        "resizable": false,
        "fullscreen": false
      }
    ]
  }
}
